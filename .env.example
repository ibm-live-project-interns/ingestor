# ============================================
# INGESTOR SERVICE - Environment Configuration
# ============================================
# Copy this file to .env and update values for your environment
# DO NOT commit .env files with real secrets to version control

# ============================================
# GENERAL
# ============================================
NODE_ENV=development
LOG_LEVEL=info

# ============================================
# API GATEWAY (Port 8081)
# ============================================
API_GATEWAY_PORT=8081
API_GATEWAY_HOST=0.0.0.0
GIN_MODE=debug

# CORS - Comma-separated allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRY_HOURS=24
JWT_ISSUER=noc-dashboard

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# INGESTOR CORE (Port 8001)
# ============================================
INGESTOR_CORE_PORT=8001
INGESTOR_CORE_HOST=0.0.0.0

# ============================================
# EVENT ROUTER (Port 8082)
# ============================================
EVENT_ROUTER_PORT=8082
EVENT_ROUTER_HOST=0.0.0.0
EVENT_ROUTER_CONFIG_PATH=./config.json

# ============================================
# AGENTS API (Port 9000)
# ============================================
AGENTS_API_PORT=9000
AGENTS_API_HOST=0.0.0.0

# Watson AI Configuration
WATSON_API_KEY=your-watson-api-key
WATSON_PROJECT_ID=your-watson-project-id
WATSON_URL=https://us-south.ml.cloud.ibm.com

# ============================================
# SERVICE DISCOVERY (Internal URLs)
# ============================================
API_GATEWAY_URL=http://localhost:8081
INGESTOR_CORE_URL=http://localhost:8001
EVENT_ROUTER_URL=http://localhost:8082
AGENTS_API_URL=http://localhost:9000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB=noc_alerts
POSTGRES_SSL_MODE=disable

# Connection Pool
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MINUTES=5

# ============================================
# KAFKA (Message Queue)
# ============================================
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_ALERTS=alerts
KAFKA_TOPIC_EVENTS=events
KAFKA_CONSUMER_GROUP=noc-ingestor

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_ENDPOINT=http://localhost:14268/api/traces

# ============================================
# SECURITY
# ============================================
# API Key for service-to-service communication
INTERNAL_API_KEY=internal-service-key-change-in-production

# TLS Configuration (for production)
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=
